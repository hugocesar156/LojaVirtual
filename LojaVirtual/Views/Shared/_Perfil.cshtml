<div class="modal fade" id="modal-perfil" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Perfil de usuário</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row text-left justify-content-center">
                    <div class="col-8">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>Nome</strong>
                                <div id="nome" class="text-capitalize"></div>
                            </li>
                            <li class="list-group-item">
                                <strong>Email</strong>
                                <div id="email"></div>
                            </li>
                            <li class="list-group-item">
                                <strong>CPF</strong>
                                <div id="cpf" class="cpf"></div>
                            </li>
                            <li class="list-group-item">
                                <strong>Endereço salvo</strong>
                                <div id="endereco" class="text-capitalize"></div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Voltar</button>
                <a href="@Url.Action("Edicao", "Usuario")" class="btn btn-info">Editar Perfil</a>
            </div>
        </div>
    </div>
</div>