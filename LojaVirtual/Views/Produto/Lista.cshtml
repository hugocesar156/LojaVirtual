@{
    ViewData["Title"] = "Lista de produtos";
}

<div class="text-center">
    <h4>Lista de produtos</h4>

    <div class="row mt-3 mb-4">
        <div class="col-3 text-left">
            <small>
                <strong>
                    <label>Registros por página:</label>
                </strong>
            </small>
            <select class="ml-2" id="quantidade" onchange="Pesquisa()">
                <option value="10">10</option>
                <option value="25" selected>25</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="text-left col">
            <a class="btn btn-info" href="@Url.Action("Cadastro", "Produto")">Novo registro</a>
        </div>
        <div class="col-3">
            <input class="form-control" type="text" id="pesquisa" name="pesquisa"
                   placeholder="Pesquise aqui..." onkeyup="Pesquisa()" />
        </div>
    </div>

    <div id="tabela">
        @await Html.PartialAsync("_Tabela")
    </div>
</div>

<div class="modal fade" id="modal-produto" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detalhes do produto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row text-left justify-content-end">
                    <div class="col-4 div-imagem">
                        <img src="" id="imagem-produto" width="200" height="200"/>
                    </div>
                    <div class="col-8">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>Nome</strong>
                                <div id="nome" class="text-capitalize"></div>
                            </li>
                            <li class="list-group-item">
                                <strong>Fabricante</strong>
                                <div id="fabricante" class="text-capitalize"></div>
                            </li>
                            <li class="list-group-item">
                                <strong>Modelo</strong>
                                <div id="modelo" class="text-capitalize"></div>
                            </li>
                            <li class="list-group-item">
                                <strong>Cor</strong>
                                <div id="cor" class="text-capitalize"></div>
                            </li>
                            <li class="list-group-item">
                                <strong>Valor</strong>
                                <div id="valor" class="real"></div>
                            </li>
                            <li class="list-group-item">
                                <strong>Dimensões</strong>
                                <div id="dimensao" class=""></div>
                            </li>
                            <li class="list-group-item">
                                <strong>Descrição</strong>
                                <div id="descricao" class=""></div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Voltar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-remover" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Remover produto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <input type="hidden" id="id-produto" />
            <div class="modal-body" id="modal-body-remover">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Voltar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="Remover()">Remover</button>
            </div>
        </div>
    </div>
</div>

<link href="~/css/Produto/imagem.css" rel="stylesheet" />
<script src="~/js/Produto/lista.js"></script>
<script src="~/js/Produto/gerenciar.js"></script>