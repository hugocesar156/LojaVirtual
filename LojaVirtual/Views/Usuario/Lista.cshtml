@{
    ViewData["Title"] = "Lista de usuários";
}

<div class="text-center">
    <h4>Lista de usuários</h4>

    <div class="row mt-3 mb-4">
        <div class="col-3 text-left">
            <small>
                <strong>
                    <label>Registros por página:</label>
                </strong>
            </small>
            <select class="ml-2" id="quantidade" onchange="Pesquisa()">
                <option value="10">10</option>
                <option value="25" selected>25</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="text-left col">
            <a class="btn btn-primary" href="@Url.Action("Cadastro", "Usuario")">Novo registro</a>
        </div>
        <div class="col-3">
            <input class="form-control" type="text" id="pesquisa" name="pesquisa"
                   placeholder="Pesquise aqui..." onkeyup="Pesquisa()" />
        </div>
    </div>

    <div id="tabela">
        @await Html.PartialAsync("_Tabela")
    </div>
</div>

<script src="~/js/Usuario/lista.js"></script>